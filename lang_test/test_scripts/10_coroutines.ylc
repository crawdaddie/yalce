%test
%include ../../examples/String


let test_iter_all_void = fn () ->
  let co_void = fn () ->
    yield 1.;
    yield 2.;
    yield 3.
  ;;
  let inst = co_void ();


  (match inst () with
  | Some 1. -> true
  | _ -> false
  )
  && (
  match inst () with
  | Some 2. -> true
  | _ -> false
  )
  && (
  match inst () with
  | Some 3. -> true
  | _ -> false
  )
  && (
  match inst () with
  | None -> true
  | _ -> false
  )
;;


let test_iter_all = fn () ->
  let co = fn a ->
    yield 1.;
    yield a;
    yield 3.
  ;;

  let inst = co 2.;

  (match inst () with
  | Some 1. -> true
  | _ -> false
